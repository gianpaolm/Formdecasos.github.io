        }

        .meli-button {
            padding: 15px 30px;
            border: none;
            border-radius: 8px;
            background-color: #FFF159;
            color: #121212;
            font-size: 1.2rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .meli-button:hover {
            background-color: #fff58c;
            box-shadow: 0 0 20px rgba(255, 241, 89, 0.4);
            transform: translateY(-3px);
        }

        /* Clase para ocultar elementos inicialmente */
        .initially-hidden {
            display: none;
            opacity: 0;
            z-index: 500;
            position: relative; /* Para que no sea fixed */
            height: auto; /* Restaura altura automática */
        }
        
        /* Contenedor del formulario (ya no es pantalla completa) */
        .form-container {
            width: 100%;
            max-width: 600px;
            background: rgba(30, 30, 30, 0.6);
            padding: 40px;
            border-radius: 15px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
        }

        /* Resto de estilos del formulario y tabla (sin cambios) */
        .header h1 { color: #FFF159; font-weight: 600; margin-bottom: 10px; text-shadow: 0 0 8px rgba(255, 241, 89, 0.5); }
        .header p { font-weight: 300; font-size: 1rem; margin-bottom: 30px; color: #b0b0b0; }
        .input-group { margin-bottom: 20px; text-align: left; }
        input[type="text"], input[type="date"], textarea { width: 100%; padding: 15px; background: rgba(0, 0, 0, 0.3); border: 1px solid rgba(255, 241, 89, 0.4); border-radius: 8px; color: #e0e0e0; font-size: 1rem; font-family: 'Poppins', sans-serif; transition: all 0.3s ease; box-sizing: border-box; }
        input[type="date"]::-webkit-calendar-picker-indicator { filter: invert(1) brightness(0.8) sepia(1) hue-rotate(10deg) saturate(5); }
        input::placeholder, textarea::placeholder { color: #888; }
