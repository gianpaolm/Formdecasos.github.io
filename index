    <!-- Pantalla de Bienvenida -->
    <div id="welcome-container" class="fullscreen-container">
        <h1>Bienvenido, Linnieiro</h1>
        <p>Demostremos que somos los mejores. Carga tus mejores casos de Level Up y sigamos rompiéndola.</p>
        <button id="continueBtn" class="meli-button">Compartir mi mejor caso</button>
    </div>

    <!-- Contenido Principal (Formulario y Tabla), inicialmente oculto -->
    <div id="main-content-container" class="initially-hidden">
        <div id="mainFormContainer" class="form-container">
            <div class="header">
                <h1>Reporte de Casos de Éxito</h1>
                <p>¡Tu aporte es clave para el equipo!</p>
            </div>
            <form id="casoForm">
                <div class="input-group"><input type="text" id="ldap" required placeholder="Tu nombre/LDAP"></div>
                <div class="input-group"><input type="text" id="numeroCaso" required placeholder="Número de caso"></div>
                <div class="input-group"><input type="date" id="fechaCaso" required></div>
                <div class="input-group"><textarea id="descripcion" rows="5" required placeholder="Breve descripción estilo Meli"></textarea></div>
                <button type="submit" class="submit-btn">Agregar Mi Caso</button>
            </form>
            <div id="feedback" class="feedback-message"></div>
            <div class="actions-section" id="actionsSection" style="display: none;">
                <p>¡Acciones disponibles!</p>
                <button id="viewCasesBtn" class="action-btn">Ver Casos Cargados</button>
                <button id="downloadBtn" class="action-btn">Descargar Casos en CSV</button>
            </div>
        </div>
        <div id="tableViewContainer" class="table-view initially-hidden">
            <button id="closeTableBtn" class="close-btn">&times;</button>
            <h2>Casos Registrados</h2>
            <div class="table-wrapper">
                <table id="casesTable"><thead... ></thead><tbody id="casesTableBody"></tbody></table>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // --- LÓGICA DE LA PANTALLA DE BIENVENIDA ---
            const welcomeContainer = document.getElementById('welcome-container');
            const continueBtn = document.getElementById('continueBtn');
            const mainContentContainer = document.getElementById('main-content-container');

            continueBtn.addEventListener('click', () => {
                // 1. Desvanecer la pantalla de bienvenida
                welcomeContainer.style.opacity = '0';

                // 2. Después de la animación, ocultarla y mostrar el contenido principal
                setTimeout(() => {
                    welcomeContainer.style.display = 'none';
                    document.body.style.overflow = 'auto'; // Permitir scroll si es necesario

                    // Mostrar el contenedor principal
                    mainContentContainer.style.display = 'flex'; // Usamos flex para centrar el contenido
                    
                    // 3. Desvanecer para mostrar el contenido principal (pequeño delay para asegurar la transición)
                    setTimeout(() => {
                        mainContentContainer.style.opacity = '1';
                    }, 50);

                }, 800); // Debe coincidir con la duración de la transición en CSS
            });


            // --- LÓGICA DEL FORMULARIO Y TABLA (SIN CAMBIOS) ---
            const form = document.getElementById('casoForm');
            const feedbackMessage = document.getElementById('feedback');
            // ... (el resto del código del formulario es idéntico)
            const actionsSection = document.getElementById('actionsSection');
            const downloadBtn = document.getElementById('downloadBtn');
            const viewCasesBtn = document.getElementById('viewCasesBtn');
            const mainFormContainer = document.getElementById('mainFormContainer');
            const tableViewContainer = document.getElementById('tableViewContainer');
            const closeTableBtn = document.getElementById('closeTableBtn');
            const casesTableBody = document.getElementById('casesTableBody');

            let casosGuardados = [];

            form.addEventListener('submit', (e) => {
                e.preventDefault();
                const caso = {
                    ldap: document.getElementById('ldap').value,
                    numeroCaso: document.getElementById('numeroCaso').value,
                    fechaCaso: document.getElementById('fechaCaso').value,
                    descripcion: document.getElementById('descripcion').value
                };
                casosGuardados.push(caso);
                feedbackMessage.textContent = '¡Caso agregado con éxito!';
                setTimeout(() => { feedbackMessage.textContent = ''; }, 4000);
                form.reset();
                if (casosGuardados.length > 0) { actionsSection.style.display = 'block'; }
            });
            
            viewCasesBtn.addEventListener('click', () => {
                renderTable();
                mainFormContainer.style.display = 'none';
                tableViewContainer.style.display = 'block';
                setTimeout(() => { tableViewContainer.style.opacity = '1'; }, 50);
            });
            
            closeTableBtn.addEventListener('click', () => {
                tableViewContainer.style.opacity = '0';
                setTimeout(() => {
                    tableViewContainer.style.display = 'none';
                    mainFormContainer.style.display = 'block';
                }, 500);
            });

            function renderTable() {
                casesTableBody.innerHTML = '';
                if (casosGuardados.length === 0) {
                    casesTableBody.innerHTML = `<tr><td colspan="4" style="text-align:center;">Aún no hay casos para mostrar.</td></tr>`;
                    return;
                }
                const tableHeader = tableViewContainer.querySelector('thead');
                tableHeader.innerHTML = `<tr><th>Nombre/LDAP</th><th>Nº Caso</th><th>Fecha</th><th>Descripción</th></tr>`;
                casosGuardados.forEach(caso => {
                    const row = document.createElement('tr');
                    row.innerHTML = `<td>${caso.ldap}</td><td>${caso.numeroCaso}</td><td>${caso.fechaCaso}</td><td>${caso.descripcion}</td>`;
                    casesTableBody.appendChild(row);
                });
            }

            downloadBtn.addEventListener('click', () => {
                if (casosGuardados.length === 0) { alert('Aún no se han agregado casos.'); return; }
                downloadCSV(convertToCSV(casosGuardados));
            });

            function convertToCSV(data) {
                const headers = ['Nombre_LDAP', 'Numero_de_Caso', 'Fecha_del_Caso', 'Descripcion'];
                const rows = data.map(c => `"${c.ldap}","${c.numeroCaso}","${c.fechaCaso}","${c.descripcion.replace(/"/g, '""').replace(/(\\r\\n|\\n|\\r)/gm, " ")}"` );
                return [headers.join(','), ...rows].join('\\n');
            }

            function downloadCSV(csvContent) {
                const blob = new Blob(['\uFEFF' + csvContent], { type: 'text/csv;charset=utf-8;' });
                const link = document.createElement('a');
                link.setAttribute('href', URL.createObjectURL(blob));
                link.setAttribute('download', 'casos_de_exito_linnieiros.csv');
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
            }
        });
    </script>
</body>
</html>
