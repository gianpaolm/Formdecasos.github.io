        textarea { resize: vertical; }
        .submit-btn { width: 100%; padding: 15px; border-radius: 8px; font-size: 1.1rem; font-weight: 600; background-color: #FFF159; color: #121212; border: none; cursor: pointer; transition: all 0.3s ease; }
